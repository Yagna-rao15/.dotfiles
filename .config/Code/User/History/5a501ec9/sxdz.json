{
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "cmake.showOptionsMovedNotification": false,
    "editor.formatOnSave": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'monospace', monospace",
    "window.customTitleBarVisibility": "auto",
    "window.menuBarVisibility": "visible",
    "window.titleBarStyle": "custom",
    "vsicons.dontShowNewVersionMessage": true,
    "extensions.experimental.affinity": { "vscodevim.vim": 1 },
    "vim.leader": ",",  // Changed leader key to comma for clarity
    "vim.insertModeKeyBindings": [
        { "before": ["j", "j"], "after": ["<Esc>"] },
        { "before": ["<leader>"], "after": ["<leader>"] }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [";"], "after": [":"] },
        { "before": ["<"], "after": ["<", "g", "v"] },
        { "before": ["<leader>", "d"], "after": ["d", "d"] },
        { "before": ["<C-n>"], "commands": [":nohl"] },
        { "before": ["K"], "commands": ["lineBreakInsert"], "silent": true }
    ],
    "vim.visualModeKeyBindings": [
        { "before": [">"], "after": [">", "g", "v"] }
    ]
}
