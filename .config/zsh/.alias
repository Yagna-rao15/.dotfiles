# Aliases
alias ls='ls -la --color'
alias c='clear'
alias mkdir='mkdir -pv'
alias mv='mv -i'
alias rm='rm -i'
alias ..='cd ..'
alias gs='git status'
alias q='exit'

# Nvim kickstarter
alias nvim-kickstart='NVIM_APPNAME=nvim-kickstart nvim'
alias nvim-lazy='NVIM_APPNAME=nvim-lazy nvim'
alias nvim-self='NVIM_APPNAME=nvim-self nvim'

