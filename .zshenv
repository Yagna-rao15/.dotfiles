export XAUTHORITY="$HOME/.dotfiles/.config/x11/Xauthority"
export XINITRC="$HOME/.dotfiles/.config/x11/xinitrc"
export XRESOURCES="$HOME/.dotfiles/.config/x11/Xresources"

source $HOME/.config/zsh/zprofile
source $HOME/.config/zsh/zshenv
source $HOME/.config/zsh/zshrc

export XDG_CURRENT_DESKTOP=i3
export XDG_DATA_DIRS=/usr/share:/usr/local/share
export GTK_ICON_THEME="Papirus-Dark"
export GTK_CURSOR_THEME="macOS"
export GTK_CURSOR_SIZE=40
export GTK_THEME=Adwaita:dark
export GTK2_RC_FILES=/usr/share/themes/Adwaita-dark/gtk-2.0/gtkrc
export ADW_DISABLE_PORTAL=1
export QT_STYLE_OVERRIDE=Adwaita-Dark

